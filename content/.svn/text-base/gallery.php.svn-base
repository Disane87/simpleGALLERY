 **/
if($_GET['action'] == 'delete' and isset($_GET['id'])){
	$database->insertupdateData("DELETE FROM ordner WHERE ordner.id = ".$_GET['id'].";");
	$database->receiveData("DELETE FROM bilder WHERE ordner_id = ".$_GET['id'].";");	
